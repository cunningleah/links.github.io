---
layout: null
---
<?xml version="1.0" encoding="ISO-8859-1"?>
<opml version="2.0">
  <head>
    <title>{{ site.title | xml_escape }}</title>
    <dateCreated>{{ site.time | date_to_rfc822 }}</dateCreated>
    <dateModified>{{ site.time | date_to_rfc822 }}</dateModified>
  </head>
{% assign hosts = site.posts | map: 'host' %}
{% assign u_hosts = hosts | uniq %}
  <body>
{% for h in u_hosts %}
	<outline text="{{ h }}">
{% assign this_host = site.posts | where: 'host', h %}{% for p in this_host %}
		<outline text="{{ p.title | xml_escape }}" date="{{ p.date | date_to_rfc822 }}" url="{{ p.external-url | xml_escape }}" link_url="{{ site.url }}{{ site.baseurl }}{{ p.url | xml_escape }}" description="{{ p.content | xml_escape }}" />
{% endfor %}
	</outline>
{% endfor %}
  </body>
</opml>
